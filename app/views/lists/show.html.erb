<div class="container">

  <div class="row justify-content-center">
    <div class="col-10 col-sm-8 col-lg-6">

        <h1>List "<%= @list.name %>"</h1>

      <ul class="list-group mb-3">
      <% @list.bookmarks.each do |bookmark| %>
        <li class="list-group-item"><%= bookmark.movie.title %>
        <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-sharp fa-solid fa-trash fa-2xs"></i></li>
        <% end %>
      <% end %>

      </ul>
      <%= link_to "Add a bookmark",  new_list_bookmark_path(@list) , class: "btn rounded btn-primary" %>
      <%= link_to "back to lists'list", root_path, class: "btn btn-link" %>
    </div>
  </div>
</div>
